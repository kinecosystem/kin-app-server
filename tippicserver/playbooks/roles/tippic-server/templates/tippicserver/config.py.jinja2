# this is the config file for the tippic-server.
# Its a jinja2 file, meant to be processed by Ansible. By default, the debug mode is set to True,
# and the debug values are hard-coded. Production values must be provided via the playbook.

APK_PACKAGE_NAME = "org.kinecosystem.tippic"
DEPLOYMENT_ENV = "{{deployment_env}}"
DEBUG = {{ debug | default('True') }}
DB_CONNSTR = "{{ db_connstr }}"

REDIS_ENDPOINT = "{{ redis_endpoint }}"
REDIS_PORT = {{ redis_port }}

STELLAR_INITIAL_ACCOUNT_BALANCE = {{ stellar_initial_account_balance }}
STELLAR_TIMEOUT_SEC = {{ stellar_timeout_sec }}

STELLAR_NETWORK = "{{ stellar_network }}"
STELLAR_HORIZON_URL = "{{ stellar_horizon_url }}"
STELLAR_KIN_ISSUER_ADDRESS = "{{ stellar_kin_issuer_address }}"

KMS_KEY_AWS_REGION = "{{ kms_key_aws_region }}"

PHONE_VERIFICATION_ENABLED = {{ phone_verification_enabled }}
PHONE_VERIFICATION_REQUIRED = {{ phone_verification_required }}

P2P_TRANSFERS_ENABLED = {{ p2p_transfers_enabled }}
P2P_MIN_KIN_AMOUNT = {{ p2p_min_kin_amount }}
P2P_MAX_KIN_AMOUNT = {{ p2p_max_kin_amount }}

TOS_URL = 'http://www.kinitapp.com/terms-and-privacy-policy'
FAQ_URL = 'https://cdn.kinitapp.com/faq/v2/index.html'
FIREBASE_SERVICE_ACCOUNT_FILE = '/opt/tippic-server/service-account.json'

AUTH_TOKEN_SEND_INTERVAL_DAYS = {{ auth_token_send_interval_days }}
AUTH_TOKEN_ENFORCED= {{ auth_token_enforced }}
AUTH_TOKEN_ENABLED= {{ auth_token_enabled }}

PAYMENT_SERVICE_URL = "{{ payment_service_url }}"
API_SERVER_URL = "{{ api_server_url }}"
USE_PAYMENT_SERVICE_PHONE_NUMBER_PREFIX = "{{ use_payment_service_phone_number_prefix }}"
USE_PAYMENT_SERVICE_PERCENT_OF_USERS = "{{ use_payment_service_percent_of_users }}"

BLOCK_ONBOARDING_ANDROID_VERSION = "{{ block_onboarding_android_version }}"
BLOCK_ONBOARDING_IOS_VERSION = "{{ block_onboarding_ios_version }}"
BLOCKED_PHONE_PREFIXES = "{{ blocked_phone_prefixes }}"
ALLOWED_PHONE_PREFIXES = "{{ allowed_phone_prefixes }}"
BLOCKED_COUNTRY_CODES = "{{ blocked_country_codes }}"

MAX_NUM_REGISTRATIONS_PER_NUMBER = "{{ max_num_registrations_per_number }}"
